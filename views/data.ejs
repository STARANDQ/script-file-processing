<!DOCTYPE html>
<html>

<head>
	<title>Login Register App</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="css/main.css">
</head>

<body>
	<div class="col-md-4 col-md-offset-4 form-card">
		<div>
			<p><%= login %></p>
		</div>
		<div>
			<center>
				<table class="table table-hover text-center">
					<tr>
						<td>Имя</td>
						<td>
							<%= name %>
						</td>
					</tr>
					<tr>
						<td>Фамилия</td>
						<td><%= surname %></td>
					</tr>
					<tr>
						<td>Отчество</td>
						<td><%= patronymic %></td>
					</tr>
					<tr>
						<td>Роль</td>
						<td>
							<%=  %>
							<% if (role === "admin") { %>
								<span style="color:red">Администратор</span>
							<% } else if(role === "supervisor") { %>
								<span style="color:blue">Руководитель</span>
							<% } else if(role === "employee") { %>
								<span style="color:grey">Сотрудник</span>
							<% } else { %>
								role
							<% } %>
						</td>
					</tr>
				</table>
			</center>
		</div>
		<div class="abc" id="LangTable">
			<a href="/logout">Logout</a>
		</div>
		<br><br>
		<% if(role === "admin") {%>
			<div class="abc">
				<a href="/register">Регистрация</a>
			</div>
			<div class="abc">
				<a href="/userInfo">Профили</a>
			</div>
			<div class="abc">
				<a href="/scripts">Скрипты</a>
			</div>
			<div class="abc">
				<a href="/files">Файлы</a>
			</div>
			<div class="abc">
				<a href="/scriptStatus">Статус Скрипта</a>
			</div>
			<div class="abc">
				<a href="/result">Результат</a>
			</div>
			<div class="abc">
				<a href="/sendMessage">Отправить сообщение</a>
			</div>
			<div class="abc">
				<a onclick="clearDataMDB()"> <span style="color:red; font-weight: bold; text-decoration: none; cursor: pointer;">Очистить данные</span></a>
			</div>
		<%}%>
		<%if(role === "supervisor"){ %>
			<div class="abc">
				<a href="/employeeList">Результат</a>
			</div>
		<% }%>
	</div>
</body>
<script>
	function clearDataMDB(){
		if(confirm("Вы действительно хотите очистить данные с базы данных?")) window.location.href = "/clearAll";
	}
</script>
</html>